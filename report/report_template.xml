<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_label_10x10">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <style>
                            /* Reset de márgenes para la página */
                            body { margin: 0 !important; padding: 0 !important; }
                            .label-page { width:100%; height:100%; overflow: hidden; }

                            /* Marco Principal */
                            .frame {
                                width:100%;
                                height:100%;
                                box-sizing:border-box;
                                padding: 15px 10px; /* Un poco más de padding vertical */
                                border:4px solid #000;
                                border-radius:25px; /* Bordes más redondeados como en la imagen */
                                font-family: Arial, Helvetica, sans-serif;
                                display:flex;
                                flex-direction:column;
                                /* Usamos 'center' para que todo el bloque quede centrado verticalmente */
                                justify-content: center;
                                align-items: center;
                                text-align: center;
                                line-height: 1.1; /* Interlineado base más ajustado */
                            }

                            /* Estilos de Texto Ajustados */
                            .date {
                                font-size: 24px;
                                font-weight: 700;
                                margin-bottom: 12px; /* Espacio después de la fecha */
                            }
                            .line-1 {
                                font-size: 15px;
                                /* CAMBIO CLAVE: Margen muy pequeño solo abajo para juntar líneas */
                                margin: 0 0 2px 0;
                                word-wrap: break-word;
                            }
                            /* Clase extra para separar los bloques (Destinatario de Remitente) */
                            .block-separator {
                                margin-bottom: 12px;
                            }

                            /* Sección Inferior */
                            .project {
                                font-size: 22px;
                                font-weight: 700;
                                margin-top: 15px; /* Separación clara del bloque anterior */
                                margin-bottom: 0px; /* Muy pegado a 'Bultos' */
                            }
                            .bultos {
                                font-size: 20px;
                                font-weight: 700; /* Bultos también en negrita según imagen */
                                margin-top: 2px;
                            }
                        </style>

                        <div class="label-page">
                            <div class="frame">
                                <div class="date">FECHA: <t t-esc="(o.scheduled_date and o.scheduled_date.strftime('%d-%m-%Y')) or ''"/></div>

                                <div class="line-1">DESTINATARIO: <t t-esc="o.partner_id.name or ''"/> DNI <t t-esc="o.partner_id.vat or ''"/></div>
                                <div class="line-1 block-separator">DIRECCION: <t t-esc="o.partner_id.street or ''"/>, <t t-esc="o.partner_id.city or ''"/></div>

                                <div class="line-1">REMITENTE: <t t-esc="o.company_id.name or ''"/> - TEL <t t-esc="o.company_id.phone or ''"/></div>
                                <div class="line-1">DIRECCION: <t t-esc="o.company_id.street or ''"/> - <t t-esc="o.company_id.city or ''"/></div>

                                <div>
                                    <div class="project">PROYECTO: <t t-esc="(o.origin or '')"/></div>
                                    <div class="bultos">BULTOS: 1 / <!--<t t-esc="len(o.package_ids) if o.package_ids else 1"/>--></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>